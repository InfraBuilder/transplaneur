#!/bin/bash

VPN_ENDPOINT_FILE=/var/run/transplaneur/vpn-endpoint

# Wait for the VPN endpoint to be available
[ -r $VPN_ENDPOINT_FILE ] || exit 1

VPN_ENDPOINT_IP=$(cat $VPN_ENDPOINT_FILE)

# Check if the VPN endpoint is reachable
ping -c 1 -W 1 -w 1 -q $VPN_ENDPOINT_IP > /dev/null || exit 1

echo ok